/* client/pages/person/person.wxss */

.main-container{
  background: #F6F6F6;
  min-height: 100vh;
}

.top-container{
  background: #007bff;
  height: 150px;
}
.person-title{
  width:100%;
  justify-content: space-around;
  padding: 10px 0;
  color: #fff;
  position: relative;
  top: 10px;
}
.person-avatar{
  height: 70px;
  width: 70px;
  border-radius: 50%;
  border: 5px solid rgba(255, 255, 255, 0.357);
  margin:10px;
  box-shadow: 0 0 200px #00356e
}
.person-avatar icon{
  font-size: 70px;
  width: 70px;
  line-height: 70px;
  text-align: center;
}
.person-baseinfo{
  flex-grow: 1;
}
.person-baseinfo .person-baseinfo-name{
  font-size: 18px;
}
.person-baseinfo .person-baseinfo-subtitle{
  font-size: 12px;
}
.person-setting{
  margin: 0 20px;
  font-size: 10px;
  align-self: flex-start;
}
.person-setting icon{
 font-size: 20px;
}
.order-tips{
  position: relative;
  background: #fff;
  box-shadow: 0 0 10px #b3b3b39a;
  border-radius: 15px;
  height:40px;
  width: 90%;
  top: 20px;
  padding: 10px;
}
.order-tips-word{
  font-size: 14px;
  margin-left: 10px;
  flex-grow: 1;
}
.check-collect{
  height: 20px;
  width: 60px;
  justify-content: center;
  border-radius: 10px;
  font-size: 14px;
  color: #fff;
  background: #ff9640;
  padding:0 auto ;
  box-shadow: 0 0 10px rgba(179, 179, 179, 0.443);
}
.check-collect text{
  line-height: 20px;
}
.check-collect icon{
  /* height: 20px; */
  line-height: 31px;
  font-size: 12px;
  margin-left: 3px;
}

.menu{
  margin-top:40px;
  background: #fff;
}
.menu-item{
  margin-top: -1px;
  padding: 10px;
}
.divider{
  width: 100%;
  height: 1px; 
  background: #dddddd;
}
.menu-item icon{
  font-size: 20px;
  color: #007bff;
  margin-right: 10px;
}
.menu-item-title{
  font-size: 16px;
  color: #9c9c9c;
}