/* client/pages/manage/manage.wxss */
.divider{
  height: 1px; 
  background: rgba(179, 179, 179, 0.533);
  width: calc(100% - 20px);
  padding: 0 !important;
  margin: 5px auto;
}
.header{
  background: #007bff;
  padding :10px 0;
  position: fixed;
  top: 0;
  width: 100%;
}
.search-input{
  flex-grow: 1;
  font-size: 14px;
  margin: 0 10px;
  border-radius: 20px;
  background: #6db1ff;
  padding: 0 20px;
  color: #fff;
}
.classify-header{
  width: 100%;
  height: 80px;
  justify-content: space-around;
  padding-top: 10px;
}
.calssify-header-item{
  font-size: 12px;
  color: #fff;
  width: 60px;
  height: 60px;
  border-radius: 30px;
  justify-content: center;
}
.calssify-header-item icon{
  font-size: 20px;
}
.calssify-header-item-active{
  background: #fff;
  color: #007bff;
}

.main-container{
  padding-top: 140px;
  margin-bottom: 10px;
  min-height: calc(100vh - 50px);
  background: #F6F6F6;
}

/** order item 样式 **/
.order-item{
  margin-top: 10px;
  background: #fff;
}
.order-item>view{
  padding: 5px 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 14px;
}
.item-base-order{
  font-size: 20px;
  color: #007bff;
  margin-right: 10px;
}
.item-base-name{
  flex-grow: 1;
  font-size: 18px;
}
.item-base-status{
  color: #007bff;
}
.item-base icon{
  color: #007bff;
  margin-left: 10px;
  font-size: 24px;
}
.item-address-info{
  flex-grow: 1;
    overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item-address-distance{
  margin: 0 10px;
}
.item-address icon{
  font-size: 24px;
  color: #FF9900;
}
.item-pay-ifPay{
  flex-grow: 1;
}
.item-info{
  flex-direction: column !important;
  align-items: flex-start !important;
}
.item-info text{
  font-size: 12px;
  display: block;
  color: #b3b3b3;
}
.item-button{
  justify-content: flex-end;
  padding-bottom: 20px;
}
.item-button view{
  justify-content: flex-end;
  font-size: 14px;
  height: 20px;
  padding: 5px 20px;
  border-radius: 10px;
  color: #fff;
  margin-right: 10px;
}
.abandon-order{
  background: #FF9900;
}
.take-order{
  background: #007bff;

}

